<body>
    <h1>ARIA Live Region Example</h1>
    <button id="updateButton">Update Live Region</button>

    <div id="liveRegion" aria-live="polite">
        Diese Region ist dynamisch. Screen-Reader werden Ver√§nderungen vorlesen
    </div>

    <script>
        let updateCount = 0;

        document.getElementById('updateButton').addEventListener('click', function() {
            updateCount++;
            document.getElementById('liveRegion').textContent = 
                `Region wurde ${updateCount}x aktualisiert.`;
        });
    </script>
